@model GLOG_BLOG.Entity.Kullanicilar

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Login V14</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="~/Content/LoginPageContent/assets/images/icons/favicon.ico" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/LoginPageContent/assets/vendor/bootstrap/css/bootstrap.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/LoginPageContent/assets/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/LoginPageContent/assets/fonts/Linearicons-Free-v1.0.0/icon-font.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/LoginPageContent/assets/vendor/animate/animate.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/LoginPageContent/assets/vendor/css-hamburgers/hamburgers.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/LoginPageContent/assets/vendor/animsition/css/animsition.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/LoginPageContent/assets/vendor/select2/select2.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/LoginPageContent/assets/vendor/daterangepicker/daterangepicker.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/LoginPageContent/assets/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/Content/LoginPageContent/assets/css/main.css">
    <!--===============================================================================================-->
</head>
<body>

    <div class="limiter">
        <div class="container-login100">

            @using (Html.BeginForm("Login", "Login", FormMethod.Post))
            {
                <div class="wrap-login100 p-l-85 p-r-85 p-t-55 p-b-55">
                    <form class="login100-form validate-form flex-sb flex-w">
                        <div class="text-danger">
                            @ViewBag.Message
                        </div>

                        <span class="login100-form-title p-b-32">
                            Giriş sayfası
                        </span>
                        <br />
                        <span style="color:red">@ViewBag.HataMesaji</span>
                        <br /><br />
                        <span class="txt1 p-b-11">
                            Kullanıcı Adı
                        </span>
                        <div class="wrap-input100 validate-input m-b-36" data-validate="Username is required">
                            @Html.TextBoxFor(x => x.Kullanici_Adi, new { @class = "input100", placeholder = "Kullanıcı Adı" })
                            <span class="focus-input100"></span>
                        </div>

                        <span class="txt1 p-b-11">
                            Parola
                        </span>
                        <div class="wrap-input100 validate-input m-b-12" data-validate="Password is required">

                            @Html.TextBoxFor(y => y.Parola, new { @class = "input100", type = "password", placeholder = "Parola" })
                            <span class="focus-input100"></span>
                        </div>

                        <div class="flex-sb-m w-full p-b-48">
                            <div>
                                <a href="#" class="txt3">
                                    Parolanızı mı unuttunuz?
                                </a>
                            </div>
                        </div>

                        <div class="container-login100-form-btn">
                            <button class="login100-form-btn">
                                Giriş
                            </button>
                        </div>

                    </form>
                </div>
            }
        </div>
    </div>


    <div id="dropDownSelect1"></div>
    <!--===============================================================================================-->
    <script href="~/Content/LoginPageContent/assets/vendor/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script href="~/Content/LoginPageContent/assets/vendor/animsition/js/animsition.min.js"></script>
    <!--===============================================================================================-->
    <script href="~/Content/LoginPageContent/assets/vendor/bootstrap/js/popper.js"></script>
    <script href="~/Content/LoginPageContent/assets/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script href="~/Content/LoginPageContent/assets/vendor/select2/select2.min.js"></script>
    <!--===============================================================================================-->
    <script href="~/Content/LoginPageContent/assets/vendor/daterangepicker/moment.min.js"></script>
    <script href="~/Content/LoginPageContent/assets/vendor/daterangepicker/daterangepicker.js"></script>
    <!--===============================================================================================-->
    <script href="~/Content/LoginPageContent/assets/vendor/countdowntime/countdowntime.js"></script>
    <!--===============================================================================================-->
    <script href="~/Content/LoginPageContent/assets/js/main.js"></script>

</body>
</html>